<div class="row">
  <div class="columns large-9 large-centered">
    <h4 class="text-center">Create Account</h4>
    <%= form_for(@user) do |f| %>
        <% if @user.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

              <ul>
                <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>



        <div class="field">
          <%= f.label :uname %>
          <br>
          <%= f.text_field :uname %>
        </div>
        <div class="field">
          <%= f.label :password %>
          <br>
          <%= f.password_field :password %>
        </div>
        <div class="field">
          <%= f.label :email %>
          <br>
          <%= f.text_field :email %>
        </div>

        <div class="field">
          <%= f.label :is_admin %>
          <br>
          <%= f.check_box :is_admin %>
        </div>
        <div class="actions text-center">
          <%= f.submit  :class => "button success radius" %>
        </div>
    <% end %>
  </div>
</div>

